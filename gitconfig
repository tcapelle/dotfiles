[alias]
	st = status -sb
	br = branch -vv
	bra = branch -vv --all
	aa = add --all :/
	ci = commit -v
	ca = commit --amend -v
	save = commit -a -m "Save"
	co = checkout
	di = diff
	ff = merge --ff-only
	f = fetch --tags --prune
	fa = fetch --all --tags --prune
	gr = log --graph --format=line # graph
	grd = log --graph --format=detail # graph detail
	gra = log --graph --format=line --all # graph all
	grad = log --graph --format=detail --all # graph all in detail
	cleanall = clean -fdx # this is dangerous, so it's intentionally long to type
	stsh = stash --keep-index
	staash = stash --include-untracked
	update-submodules = submodule update --init --recursive
	upgrade-submodules = submodule update --init --remote

[diff]
	mnemonicPrefix = true
	wordRegex = "[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"
	compactionHeuristic = true

[color]
	ui = auto

[color "grep"]
	match = cyan bold
	selected = blue
	context = normal
	filename = magenta
	linenumber = green
	separator = yellow
	function = blue

[pretty]
	line = "%C(auto)%h %<|(60,trunc)%s %C(green)%ad%C(auto)%d"
	detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ad%n %C(auto)%d%n"

[merge]
	defaultToUpstream = true
	tool = vscode

[pull]
	ff = only
	rebase = true

[mergetool]
	keepBackup = false

[push]
	default = upstream

[credential]
	helper = manager

[grep]
	lineNumber = true

[advice]
	detachedHead = false
	waitingForEditor = false

[user]
	useConfigOnly = true
	name = Thomas Capelle
	email = tcapelle@pm.me

[http]
	cookieFile = ~/.gitcookies

[core]
	excludesfile = ~/.gitignore_global
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
	syntax-theme = Solarized (dark)

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
[rebase]
	autoStash = true
[branch]
    autoSetupRebase = always
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
